<h1>Products</h1>

<%= link_to "New product", new_products_path %>

<div class="col-md-6 col-offset-3">
  <table class="table">
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Price</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.title %></td>
          <td><%= product.description %></td>
          <td><%= product.price %></td>
          <td><%= link_to "Edit", edit_products_path(product) %></td>
          <td><%= link_to "Delete", products_path, method: :delete %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
